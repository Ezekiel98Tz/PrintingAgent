# AI Document Agent Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# LLM/AI Configuration
# =============================================================================

# LLM Provider: mock, openai, anthropic, openrouter, deepseek, groq
LLM_PROVIDER=mock

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# General Model (used by OpenAI-compatible providers like OpenRouter/DeepSeek/Groq)
MODEL_NAME=openai/gpt-4o-mini

# OpenRouter Configuration (broad catalog including Gemini/Claude/Llama etc.)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# DeepSeek Configuration (OpenAI-compatible)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# Optional override if needed
# DEEPSEEK_BASE_URL=https://api.deepseek.com

# Groq Configuration (OpenAI-compatible)
GROQ_API_KEY=your_groq_api_key_here
# Optional override if needed
# GROQ_BASE_URL=https://api.groq.com/openai/v1

# AI Model Parameters
TEMPERATURE=0.3
MAX_TOKENS=2000

# =============================================================================
# WhatsApp/Twilio Configuration (Optional - for future WhatsApp integration)
# =============================================================================

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_NUMBER=+1234567890
WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# Printer Configuration
# =============================================================================

# Default printer name (leave empty to use system default)
PRINTER_NAME=

# Print settings
PRINT_QUALITY=normal
PAPER_SIZE=A4
DUPLEX_PRINTING=false

# =============================================================================
# Document Processing Configuration
# =============================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=.docx,.pdf,.txt

# Output format for processed documents
OUTPUT_FORMAT=docx

# =============================================================================
# Agent Behavior Configuration
# =============================================================================

AGENT_NAME=AI Document Assistant
PROCESSING_INSTRUCTIONS=Improve grammar, clarity, and formatting while preserving the original meaning and style.
OUTPUT_LANGUAGE=English
ACADEMIC_STYLE=true
PRESERVE_FORMATTING=true
MAX_SUGGESTIONS=5

# =============================================================================
# Application Settings
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false